<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_effect">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_img"
        android:visibility="gone"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item_loading"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:lottie_fileName="lego.json"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="180dp"
        />
    <TextView
        android:id="@+id/item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="source"
        android:textColor="@color/font_secondary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_guide"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="esd edppf desffse fsddfes fdfem,fd seffdo"
        android:textSize="16sp"
        android:textColor="@color/font_primary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_source"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020/20/20"
        android:textSize="9sp"
        android:textStyle="bold"
        android:textColor="@color/font_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>